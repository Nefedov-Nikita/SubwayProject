<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="450dp"
    android:background="@drawable/shape"
    android:padding="5dp"
    android:layout_gravity="center">


    <TextView
        android:id="@+id/txtcloseinf"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@color/colorDarkGrey"
        android:text="X"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"/>

    <TextView
        android:id="@+id/metronameinf"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:textColor="@color/colorBlueDark"
        android:text="Станция метро"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView
        android:id="@+id/infoDesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Информация о станции"
        android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/yanMap"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_map"
            android:text="На карте" />

        <Button
            android:id="@+id/landmark"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_land"
            android:text="Места" />
    </LinearLayout>

</LinearLayout>